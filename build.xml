<project>

    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="compile">
        <mkdir dir="bin"/>
        <javac srcdir="src" destdir="bin" includeantruntime="false"/>
    </target>

    <target name="run">
        <java classpath="bin" classname="flashalizer" fork="true"/>
    </target>

</project>
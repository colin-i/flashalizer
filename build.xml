<project>

    <target name="clean">
	<delete includeemptydirs="true">
		<fileset dir="bin">
			<exclude name=".gitignore"/>
		</fileset>
	</delete>
    </target>

    <target name="compile">
        <javac srcdir="src" destdir="bin" includeantruntime="false"/>
    </target>

    <target name="run">
        <java classpath="bin" classname="flashalizer" fork="true"/>
    </target>

</project>